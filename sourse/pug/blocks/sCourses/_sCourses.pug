mixin course(t, text, i, o, p, bg)
	+b.courseWrrpaer 
		+e.content
			h5!= t
			p!= text
			+e.info
				block
			+b.whoBlock
				+pic(`sTeam-${i}.jpg`)
				+e.text!= o
			+pricing(p, '#modal-consult')
		+pic(`courseImg-${bg}.jpg`)

mixin infoblock(infoTitle, infoText)
	+b.infoBlock 
		+e.SPAN.title!= infoTitle
		+e.SPAN.text!= infoText

