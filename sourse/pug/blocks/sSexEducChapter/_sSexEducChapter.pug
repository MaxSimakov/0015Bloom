
mixin slide(i, p)
	+e.slide.swiper-slide
		+e.item(href=`#`)
			+pic(`sSexEducChapter-${i}.jpg`, ``, 0)
			p!= p

mixin sSexEducChapter(t)
	// start sSexEducChapter
	+b.sSexEducChapter.section#sSexEducChapter&attributes(attributes)
		.container
			+b.section-title
				h4!= t
			+e.slider--js.swiper
				.swiper-wrapper
					block
				+arrow

	// end sSexEducChapter