mixin sNewsWrraper(h, sw)
	// start sNewsWrraper
	+b.sNewsWrraper.section#sNewsWrraper&attributes(attributes)
		.container
			if h
				h4!= h
			if sw
				label.form-check.form-switch.custom-switch
					input.form-check-input(type='checkbox', checked)
					span.form-check-label Только бесплатные
			block

	// end sNewsWrraper