mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container-fluid
			+e.row-main.row
				+e.col--left.col-auto
					+e.controls--left
						+menu-toggle()
						+e.logo(href="/")
							+icon('logo')
				.col
				+e.col--right.col-auto
					+e.controls--right
						+e.btn(href="#")
							+icon('notification')
							+e.btn-count 2
						+e.btn(href="#") 
							+icon('account-header')
							+e.SPAN.btn-text Личный кабинет
		+mob-mnu()

