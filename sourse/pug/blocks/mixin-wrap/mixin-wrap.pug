mixin pageHead(data)
	+b.page-head&attributes(attributes)
		.container
			+e.content
				+e.title
					h1!= data.t
					if data.p
						p!= data.p
					block
				if data.btn
					+e.btn(href="#")= data.btn
				if data.img
					+pic(data.img)
				if data.search
					+searchForm(data.d, data.formText)

mixin pageHead-article(data)
	+b.page-head-article&attributes(attributes)
		.container
			h1!= data.t
			+e.btn-back(href="#")
				+icon('chevron-left-sm')
				span!= data.b
