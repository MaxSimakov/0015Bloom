mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin searchForm(d, formText)
	+b.FORM.searchForm 
		+input("Поиск")
		if d
			+e.P.formText!= formText
		button 
			if d 
				+icon('close')
			else 
				+icon('search')

