mixin pageHead(data)
	+b.page-head&attributes(attributes)
		.container
			+e.content
				if data.bread 
					+breadcrumb()
				+e.title
					if data.label 
						+e.label!= data.label
					h1!= data.t
					if data.p
						p!= data.p
					block
				if data.btn
					+e.btn(href="#")= data.btn
				if data.img
					+pic(data.img)
				if data.search
					+searchForm(data.d, data.formText)
				if data.course 
					+e.mobileWrraper
						if data.p2
							p!= data.p2
						.row
							+infoblock('Начало проведения', '3 июля в 18:00 (по мск)')
							+infoblock('Длительность', '12 занятий')
							+infoblock('Формат проведения', 'Онлайн')
						if data.who
							+e.who
								+pic(`sTeam-1.jpg`)
								+e.text
									p Анна Грикевич
									p Специалист по функциональному движению и восстановлению мышц тазового дна
						+pricing3('900', '1800', '#modal-consult', 'Купить курс')

mixin pageHead-about(data)
	+b.page-head--about&attributes(attributes)
		.container
			+e.content
				+e.title
					h1!= data.t
					if data.p
						p!= data.p
				if data.img
					+e.img-wrap
						+pic(data.img)
						block




mixin pricing(n, l)
	+b.pricing-block
		.row
			+e.col.col.col-sm-auto
				+e.num= n
					span ₽
				span /час
			.col-auto
				+e.btn(href=`${l}`).link-modal-js Записаться
		block

mixin pricing2(n, l, btn)
	+b.pricing-block
		.row
			+e.col.col.col-sm-auto
				+e.num= n
					span ₽
			.col-auto
				+e.btn(href=`${l}`)!= btn
		block

mixin pricing3(n, s, l, btn)
	+b.pricing-block
		.row
			+e.col.col.col-sm-auto
				+e.num= n
					span ₽
				+e.sale= s
					span ₽
			.col-auto
				+e.btn(href=`${l}`)!= btn
		block

mixin help-tooltip(t)
	+b.SPAN.help-tooltip
		+icon('help')
		span!= t

mixin link-back(t, l)
	+b.link-back(href=`${l}`)
		+icon('chevron-left-sm')
		span!= t

mixin course(s, h, text, i, p, bg, btn, ...texts)
	+b.courseWrrpaer&attributes(attributes)
		+e.bookmark(href="#")
				+icon(`bookmarkActive`)
		if s
			+e.SPAN.label!= s
		+e.content
			h5!= h
			p!= text
			.row
				block
			+e.who
				+pic(`sTeam-${i}.jpg`)
				+e.text
					each text in texts 
						p!= text
			+pricing2(p, '#modal-consult', btn)
		+pic(`courseImg-${bg}.jpg`)

mixin infoblock(infoTitle, infoText)
	.col-12.col-lg-auto
		+e.infoBlock 
			span!= infoTitle
			span!= infoText

mixin courseItem(will, t, ...texts)
	if will
		+b.courseItem
			+e.check
				+icon('check')
			h6!= t
			each text in texts
				p!= text
	else
		+b.courseItem--get
			+e.check
				+icon('check')
			h6!= t

mixin cabinet-body(h)
	.container-fluid.container--main
		.row.row--main
			.col-auto.col--aside
				+aside-menu
			.col.col--main
				.cabinet-head.text-center
					h1!= h
				block

