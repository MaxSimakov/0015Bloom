mixin publicChatItem(unread, pic, name, status, date, topic, text)
	+e.item&attributes(attributes)
		.row.g-2
			.col-auto
				+pic(`sTeam-${pic}.jpg`)
			.col
				.row.g-0
					.col
						+e.message-name
							span!= name
							br
							span!= status
					+e.time.col-auto!= date
					+e.message-text
						span!= topic
						if unread
							p.unread!= text
						else
							p!= text

mixin chatMessage(text, time)
	+e.message&attributes(attributes)
		+e.text-wrraper
			p!= text
		span!= time

