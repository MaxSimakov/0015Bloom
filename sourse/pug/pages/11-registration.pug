block variables
	- let  mainPage= 'registration' 
	- let  st= null
	- let  bg= null

block title
	- let  title= 'Регистрация'
	title= title
block pagecontent

	+top-nav()
	+sRegistration({
		img: 'sRegistration-2.png',
		title
	})
		.text-center.mb-3 Через соцсети
		+soc().--reg
			+item-sos('facebook-reg')
			+item-sos('vkontakte-reg')
			+item-sos('google-reg')
			//- +item-sos
			//- 	img(src="img/svg/facebook-reg.svg" alt="")
